<section id="benefits_section" class="benefits-section">
  <div class="section-container">
    <div class="benefits-wrapper">
      <div class="benefit-item">
        <img
          src="{{ section.settings.benefit_1_image | img_url: 'master' }}"
          alt="{{ section.settings.benefit_1_title }}"
        >
        <div class="benefit-text">
          <p class="benefit-title">{{ section.settings.benefit_1_title }}</p>
          <p class="benefit-description">{{ section.settings.benefit_1_description }}</p>
        </div>
      </div>
      <div class="benefit-item">
        <img
          src="{{ section.settings.benefit_2_image | img_url: 'master' }}"
          alt="{{ section.settings.benefit_2_title }}"
        >
        <div class="benefit-text">
          <p class="benefit-title">{{ section.settings.benefit_2_title }}</p>
          <p class="benefit-description">{{ section.settings.benefit_2_description }}</p>
        </div>
      </div>
      <div class="benefit-item">
        <img
          src="{{ section.settings.benefit_3_image | img_url: 'master' }}"
          alt="{{ section.settings.benefit_3_title }}"
        >
        <div class="benefit-text">
          <p class="benefit-title">{{ section.settings.benefit_3_title }}</p>
          <p class="benefit-description">{{ section.settings.benefit_3_description }}</p>
        </div>
      </div>
      <div class="benefit-item">
        <img
          src="{{ section.settings.benefit_4_image | img_url: 'master' }}"
          alt="{{ section.settings.benefit_4_title }}"
        >
        <div class="benefit-text">
          <p class="benefit-title">{{ section.settings.benefit_4_title }}</p>
          <p class="benefit-description">{{ section.settings.benefit_4_description }}</p>
        </div>
      </div>
    </div>
  </div>
</section>

{{ 'benefits.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "Benefits",
  "settings": [
    {
      "type": "image_picker",
      "id": "benefit_1_image",
      "label": "Benefit 1 Image"
    },
    {
      "type": "text",
      "id": "benefit_1_title",
      "label": "Benefit 1 Title",
      "default": "Free shipping"
    },
    {
      "type": "text",
      "id": "benefit_1_description",
      "label": "Benefit 1 Description",
