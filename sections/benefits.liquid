    },
    {
      "type": "image_picker",
      "id": "benefit_2_image",
      "label": "Benefit 2 Image"
    },
    {
      "type": "text",
      "id": "benefit_2_title",
      "label": "Benefit 2 Title",
      "default": "Satisfied"
    },
    {
      "type": "text",
      "id": "benefit_2_description",
      "label": "Benefit 2 Description",
